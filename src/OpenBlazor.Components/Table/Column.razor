@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@using System.Diagnostics

@namespace OpenBlazor.Components.Table

@typeparam TItem

@code
{
    [Parameter] 
    public RenderFragment? ChildContent { get; set; } 

    [CascadingParameter]
    private Table<TItem>? _table { get; set; }

    [Parameter]
    public string Header { get; set; } = "";

    [Parameter] public Func<TItem, object?> Selector { get; set; } = _ => null;

    [Parameter] public Func<object?, string>? Formatter { get; set; }

    protected override void OnInitialized()
    {
        _table?.Register(this);
        Console.WriteLine("Column initialized");
    }

}