{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "OpenBlazor Showcase (Debug)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/src/OpenBlazor.Showcase/bin/Debug/net8.0/OpenBlazor.Showcase.dll",
      "cwd": "${workspaceFolder}/src/OpenBlazor.Showcase",
      "preLaunchTask": "build OpenBlazor.Showcase",
      "console": "integratedTerminal",

      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
